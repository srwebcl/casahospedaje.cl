---
import { MessageCircle } from "lucide-react";
---

<a
    href="https://wa.me/56998518939?text=Hola,%20quisiera%20más%20información%20sobre%20el%20hospedaje."
    target="_blank"
    rel="noopener noreferrer"
    class="fixed bottom-6 right-6 z-50 flex items-center justify-center w-16 h-16 bg-[#25D366] text-white rounded-full shadow-2xl hover:bg-[#20bd5a] transition-all duration-300 hover:scale-110 group animate-bounce-slow"
    aria-label="Contactar por WhatsApp"
>
    <MessageCircle className="w-8 h-8" />
    <span
        class="absolute right-full mr-4 bg-white text-gray-800 px-4 py-2 rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap text-sm font-medium hidden md:block"
    >
        ¡Hablemos por WhatsApp!
    </span>
</a>

<style>
    @keyframes bounce-slow {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    .animate-bounce-slow {
        animation: bounce-slow 3s infinite ease-in-out;
    }
</style>
