---
import { MapPin, Wifi, Banknote, Flame } from "lucide-react";
---

<section
    class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden"
>
    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
        <video
            autoplay
            loop
            muted
            playsinline
            class="w-full h-full object-cover"
            poster="/images/hero-poster.jpg"
        >
            <source src="/casa-hospedaje.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <!-- Dark Overlay -->
        <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <!-- Content -->
    <div
        class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white pt-24 pb-12 md:pt-40 md:pb-0 w-full h-full flex flex-col justify-center"
    >
        <div class="space-y-4 md:space-y-6">
            <h1
                class="flex flex-col items-center justify-center font-sans font-black leading-none tracking-tighter drop-shadow-2xl reveal uppercase"
            >
                <span
                    class="text-2xl sm:text-3xl md:text-3xl lg:text-4xl text-white block mb-2 md:mb-3 tracking-widest text-shadow-strong opacity-90"
                >
                    Hospedaje Familiar
                </span>
                <span
                    class="text-4xl sm:text-5xl md:text-7xl lg:text-7xl xl:text-8xl text-gradient-metallic block power-glow transform scale-100 md:scale-105 transition-transform duration-700 cursor-default py-2"
                >
                    Cerro Los Placeres
                </span>
            </h1>

            <p
                class="text-base sm:text-lg md:text-xl text-white max-w-2xl mx-auto font-bold leading-relaxed drop-shadow-[0_4px_4px_rgba(0,0,0,0.8)] text-shadow-strong reveal reveal-delay-100 px-2"
            >
                Una casona clásica con la mejor vista de Valparaíso. <br
                    class="hidden sm:block"
                />
                Económico, seguro y a pasos de la Universidad Santa María.
            </p>

            <!-- Badges -->
            <div
                class="flex flex-wrap justify-center items-center gap-2 md:gap-4 pt-2 md:pt-4 reveal reveal-delay-200"
            >
                <div
                    class="flex items-center gap-1.5 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-full border border-white/20 hover:bg-white/20 transition-colors"
                >
                    <Flame
                        className="w-3.5 h-3.5 md:w-5 md:h-5 text-[#fb923c]"
                    />
                    <span class="text-[10px] md:text-xs font-medium"
                        >Agua Caliente</span
                    >
                </div>
                <div
                    class="flex items-center gap-1.5 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-full border border-white/20 hover:bg-white/20 transition-colors"
                >
                    <Wifi
                        className="w-3.5 h-3.5 md:w-5 md:h-5 text-[#fb923c]"
                    />
                    <span class="text-[10px] md:text-xs font-medium"
                        >WiFi Rápido</span
                    >
                </div>
                <div
                    class="flex items-center gap-1.5 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-full border border-white/20 hover:bg-white/20 transition-colors"
                >
                    <Banknote
                        className="w-3.5 h-3.5 md:w-5 md:h-5 text-[#fb923c]"
                    />
                    <span class="text-[10px] md:text-xs font-medium"
                        >Económico</span
                    >
                </div>
            </div>

            <div
                class="pt-6 md:pt-8 reveal reveal-delay-300 w-full flex justify-center"
            >
                <a
                    href="#contacto"
                    class="relative overflow-hidden group bg-gradient-to-r from-[#d97706] via-[#fb923c] to-[#d97706] text-white text-base md:text-lg font-black uppercase tracking-wider px-8 py-3 md:px-10 md:py-4 rounded-full shadow-[0_0_20px_rgba(217,119,6,0.5)] hover:shadow-[0_0_40px_rgba(217,119,6,0.8)] transition-all duration-300 transform hover:-translate-y-1 ring-4 ring-white/10 backdrop-blur-sm"
                >
                    <span class="relative z-10 flex items-center gap-2">
                        Reservar Ahora
                    </span>
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-transparent via-white/40 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-700 ease-in-out"
                    >
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fade-in-up 1s ease-out forwards;
    }
</style>
