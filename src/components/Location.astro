---
import { GraduationCap, Map, Bus, Binoculars } from "lucide-react";

const contents = [
    {
        icon: GraduationCap,
        title: "Estudiantes y Académicos",
        description:
            "Ubicación estratégica en calle San Luis, a solo 2 cuadras de la Universidad Técnica Federico Santa María.",
    },
    {
        icon: Map,
        title: "Turismo y Playa",
        description: "A minutos caminando de la Caleta Portales y la playa.",
    },
    {
        icon: Bus,
        title: "Conectividad",
        description: "Locomoción a la puerta hacia Valparaíso y Viña del Mar.",
    },
    {
        icon: Binoculars,
        title: "La Vista",
        description:
            "Una terraza natural con panorámica a toda la bahía (ideal para ver los barcos y el puerto).",
    },
];
---

<section
    id="ubicacion"
    class="py-24 bg-gradient-to-b from-[#1e3a8a] to-[#0f172a] relative overflow-hidden"
>
    <!-- Background Decor -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-black/60 z-10"></div>
        <img
            src="/imagenes/valparaiso.jpg"
            alt="Valparaíso de noche"
            class="w-full h-full object-cover animate-ken-burns opacity-60"
        />
    </div>

    <!-- Grid Pattern Overlay (Optional, reduced opacity) -->
    <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5 z-10">
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-20">
            <h2
                class="text-4xl md:text-5xl font-sans font-black uppercase tracking-tight text-white mb-6 reveal"
            >
                En el corazón del <br class="hidden md:block" />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#fbbf24] via-[#f59e0b] to-[#d97706] drop-shadow-lg filter brightness-125"
                >
                    Barrio Universitario
                </span>
            </h2>
            <p
                class="text-blue-100 text-xl max-w-2xl mx-auto reveal reveal-delay-200 leading-relaxed font-medium"
            >
                Ubicados estratégicamente para brindarte la mejor experiencia de
                Valparaíso.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {
                contents.map((item, index) => (
                    <div
                        class={`bg-white p-8 rounded-2xl shadow-xl hover:shadow-[0_0_40px_rgba(251,191,36,0.2)] hover:-translate-y-2 transition-all duration-300 group reveal reveal-delay-${(index + 1) * 100} relative overflow-hidden border border-white/10`}
                    >
                        <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-[#fbbf24] to-[#d97706] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left" />

                        <div class="w-16 h-16 bg-orange-50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-orange-100 transition-colors duration-300 transform group-hover:rotate-6">
                            <item.icon className="w-8 h-8 text-[#d97706] group-hover:scale-110 transition-transform duration-300" />
                        </div>
                        <h3 class="text-xl font-black text-gray-900 mb-3 uppercase tracking-tight">
                            {item.title}
                        </h3>
                        <p class="text-gray-600 leading-relaxed font-medium">
                            {item.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    @keyframes ken-burns {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }
    .animate-ken-burns {
        animation: ken-burns 20s ease-in-out infinite alternate;
    }
</style>
