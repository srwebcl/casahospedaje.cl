---
import { Sparkles, CalendarClock, PartyPopper } from 'lucide-react';

// Logic to check date
const today = new Date();
const deadline = new Date(2026, 0, 1, 23, 59, 59); // Jan 1st 2026 23:59:59
const showPromo = today <= deadline;
---

{showPromo && (
  <div id="new-year-promo" class="fixed inset-0 z-[100] flex items-center justify-center px-4 hidden">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/80 backdrop-blur-sm" id="promo-backdrop"></div>
    
    <!-- Modal Content -->
    <div class="relative bg-gradient-to-br from-[#0f172a] to-[#1e3a8a] rounded-3xl p-1 shadow-2xl max-w-md w-full transform scale-0 transition-transform duration-500" id="promo-content">
      <div class="absolute -top-12 -left-12 w-24 h-24 bg-yellow-400 rounded-full blur-3xl opacity-50 animate-pulse"></div>
      <div class="absolute -bottom-12 -right-12 w-32 h-32 bg-[#d97706] rounded-full blur-3xl opacity-50 animate-pulse delay-700"></div>
      
      <div class="bg-[#0f172a]/90 rounded-[1.4rem] p-8 text-center relative overflow-hidden border border-white/10">
        <!-- Close Button -->
        <button id="close-promo" class="absolute top-4 right-4 text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>

        <!-- Icon -->
        <div class="inline-flex items-center justify-center p-4 bg-gradient-to-br from-[#d97706] to-[#fb923c] rounded-full mb-6 shadow-lg animate-bounce">
            <PartyPopper className="w-10 h-10 text-white" />
        </div>

        <h3 class="text-3xl font-sans font-black text-transparent bg-clip-text bg-gradient-to-r from-[#fb923c] via-[#fcd34d] to-[#fb923c] mb-2 uppercase tracking-tight animate-pulse-slow">
            ¡Año Nuevo 2026!
        </h3>
        
        <p class="text-blue-100 text-lg mb-6 leading-relaxed">
            Ven a disfrutar la <span class="text-[#fb923c] font-bold">mejor vista de los fuegos artificiales</span> desde nuestra terraza.
        </p>

        <div class="bg-white/5 rounded-xl p-4 mb-8 border border-white/10">
            <div class="flex items-center justify-center gap-2 text-yellow-400 font-bold mb-1">
                <CalendarClock className="w-5 h-5" />
                <span>ÚLTIMOS CUPOS</span>
            </div>
            <p class="text-gray-400 text-sm">Reserva directa por WhatsApp</p>
        </div>

        <a 
            href="https://wa.me/56998518939?text=Hola,%20me%20interesa%20reservar%20para%20Año%20Nuevo%202026"
            target="_blank"
            onclick="gtag('event', 'conversion', {'send_to': 'AW-17835958873/fB4gCK_PmtgbENnE7LhC'});"
            class="block w-full bg-gradient-to-r from-[#d97706] to-[#fb923c] hover:from-[#b45309] hover:to-[#d97706] text-white font-black text-lg py-4 rounded-xl shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 uppercase tracking-wide"
        >
            Agendar por WhatsApp
        </a>
      </div>
    </div>
  </div>

  <script>
    // Logic to show modal on load
    // Logic to show modal on load
    document.addEventListener("DOMContentLoaded", () => {
        const promo = document.getElementById("new-year-promo");
        const content = document.getElementById("promo-content");
        const closeBtn = document.getElementById("close-promo");
        const backdrop = document.getElementById("promo-backdrop");

        if (promo && content) {
            setTimeout(() => {
                promo.classList.remove("hidden");
                // Trigger animation
                requestAnimationFrame(() => {
                    content.classList.remove("scale-0");
                    content.classList.add("scale-100");
                });
            }, 1500); // 1.5s delay
        }

        const closeModal = () => {
            content?.classList.remove("scale-100");
            content?.classList.add("scale-0");
            setTimeout(() => {
                promo?.classList.add("hidden");
            }, 300);
        };

        closeBtn?.addEventListener("click", closeModal);
        backdrop?.addEventListener("click", closeModal);
    });
  </script>
)}
