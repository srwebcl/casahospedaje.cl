---
import { Phone, Mail, MapPin } from "lucide-react";
import Form from "./Form.astro";
---

<footer
    id="contacto"
    class="relative bg-gray-900 text-white pt-20 pb-10 overflow-hidden"
>
    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
        <video
            muted
            playsinline
            preload="none"
            class="w-full h-full object-cover opacity-30 lazy-video"
            poster="/footer-poster.jpg"
        >
            <source data-src="/footer.mp4" type="video/mp4" />
        </video>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const lazyVideos = [].slice.call(
                    document.querySelectorAll("video.lazy-video"),
                );
                if ("IntersectionObserver" in window) {
                    const lazyVideoObserver = new IntersectionObserver(
                        (entries, observer) => {
                            entries.forEach((video) => {
                                if (video.isIntersecting) {
                                    const videoElement =
                                        video.target as HTMLVideoElement;
                                    const sources =
                                        videoElement.querySelectorAll("source");
                                    sources.forEach((source) => {
                                        source.src = source.dataset.src || "";
                                    });
                                    videoElement.load();
                                    videoElement.play();
                                    videoElement.loop = true; // Set loop after loading
                                    lazyVideoObserver.unobserve(videoElement);
                                }
                            });
                        },
                    );
                    lazyVideos.forEach((lazyVideo) => {
                        lazyVideoObserver.observe(lazyVideo as Element);
                    });
                }
            });
        </script>
        <div class="absolute inset-0 bg-gray-900/90 z-10"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mb-16">
            <!-- Información de Contacto -->
            <div>
                <h2 class="text-3xl font-serif font-bold mb-6 reveal">
                    Contáctanos
                </h2>
                <p class="text-gray-400 mb-8 text-lg reveal reveal-delay-200">
                    Estamos atentos a tus consultas. Respondemos a la brevedad
                    para asegurar tu estadía.
                </p>

                <div class="space-y-6 reveal reveal-delay-300">
                    <div class="flex items-center group">
                        <div
                            class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center group-hover:bg-[#d97706] transition-colors duration-300"
                        >
                            <Phone
                                className="w-6 h-6 text-[#fb923c] group-hover:text-white"
                            />
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-400">WhatsApp</p>
                            <a
                                href="https://wa.me/56998518939"
                                class="text-lg font-medium hover:text-[#fb923c] transition-colors"
                            >
                                +56 9 98518939
                            </a>
                        </div>
                    </div>

                    <div class="flex items-start group">
                        <div
                            class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center group-hover:bg-[#d97706] transition-colors duration-300 flex-shrink-0"
                        >
                            <Mail
                                className="w-6 h-6 text-[#fb923c] group-hover:text-white"
                            />
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-400">Email</p>
                            <a
                                href="mailto:contacto@casahospedaje.cl"
                                class="text-lg font-medium hover:text-[#fb923c] transition-colors block"
                            >
                                contacto@casahospedaje.cl
                            </a>
                            <a
                                href="mailto:gonzalez.sergomar@gmail.com"
                                class="text-sm text-gray-400 hover:text-[#fb923c] transition-colors block mt-1"
                            >
                                gonzalez.sergomar@gmail.com
                            </a>
                        </div>
                    </div>

                    <div class="flex items-center group">
                        <div
                            class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center group-hover:bg-[#d97706] transition-colors duration-300"
                        >
                            <MapPin
                                className="w-6 h-6 text-[#fb923c] group-hover:text-white"
                            />
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-400">Dirección</p>
                            <p class="text-lg font-medium">
                                San Luis #465, Cerro Los Placeres, Valparaíso.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulario -->
            <div
                class="bg-white rounded-2xl p-8 text-gray-900 shadow-xl reveal reveal-delay-200"
            >
                <h3 class="text-2xl font-bold mb-6 text-[#1e3a8a]">
                    Envíanos un mensaje
                </h3>
                <Form />
            </div>
        </div>

        <div
            class="border-t border-gray-800 pt-8 text-center text-gray-500 text-sm reveal"
        >
            <p>
                &copy; {new Date().getFullYear()} Casa Hospedaje Cerro Los Placeres.
                Todos los derechos reservados.
            </p>
        </div>
    </div>
</footer>
