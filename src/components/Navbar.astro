---
import { Menu, X, Phone } from "lucide-react";

const links = [
    { name: "Inicio", href: "#" },
    { name: "Nosotros", href: "#nosotros" },
    { name: "Ubicación", href: "#ubicacion" },
    { name: "Habitaciones", href: "#habitaciones" },
    { name: "Contacto", href: "#contacto" },
];
---

<header
    class="fixed w-full z-50 bg-white/95 backdrop-blur-sm shadow-sm transition-all duration-300"
>
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center gap-2">
                <a href="#" class="flex items-center gap-2 group">
                    <div
                        class="bg-gradient-to-br from-[#0f172a] to-[#ca8a04] p-2.5 rounded-lg shadow-lg group-hover:shadow-xl transition-all duration-300 ring-1 ring-white/10"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-white"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                            ></path><polyline points="9 22 9 12 15 12 15 22"
                            ></polyline></svg
                        >
                    </div>
                    <span
                        class="text-xl md:text-2xl font-sans font-black tracking-tighter uppercase leading-none flex flex-col"
                    >
                        <span
                            class="text-[0.6em] text-[#0f172a] tracking-widest mb-0.5 font-bold"
                            >Hospedaje</span
                        >
                        <span
                            class="bg-clip-text text-transparent bg-gradient-to-r from-[#0f172a] via-[#b45309] to-[#d97706] drop-shadow-sm"
                        >
                            Cerro Los Placeres
                        </span>
                    </span>
                </a>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center space-x-8">
                {
                    links.map((link) => (
                        <a
                            href={link.href}
                            class="text-gray-600 hover:text-[#d97706] transition-colors font-medium text-sm tracking-wide"
                        >
                            {link.name}
                        </a>
                    ))
                }
                <a
                    href="tel:+56998518939"
                    onclick="gtag('event', 'conversion', {'send_to': 'AW-17835958873/fB4gCK_PmtgbENnE7LhC'});"
                    class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 text-[#1e3a8a] hover:bg-[#1e3a8a] hover:text-white transition-all duration-300 shadow-sm hover:shadow-md"
                    aria-label="Llamar"
                >
                    <Phone className="w-5 h-5" />
                </a>
                <a
                    href="#contacto"
                    class="bg-[#1e3a8a] hover:bg-[#1e3a8a]/90 text-white px-6 py-2.5 rounded-full font-medium transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5 text-sm"
                >
                    Reservar Ahora
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden flex items-center">
                <button
                    id="mobile-menu-btn"
                    type="button"
                    class="text-gray-600 hover:text-gray-900 focus:outline-none p-2"
                    aria-label="Menú principal"
                >
                    <Menu className="w-6 h-6" id="menu-icon" />
                    <X className="w-6 h-6 hidden" id="close-icon" />
                </button>
            </div>
        </div>
    </nav>

    <!-- Mobile Menu -->
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-white border-t border-gray-100"
    >
        <div class="px-4 pt-2 pb-6 space-y-1">
            {
                links.map((link) => (
                    <a
                        href={link.href}
                        class="block px-3 py-3 text-base font-medium text-gray-600 hover:text-[#d97706] hover:bg-gray-50 rounded-lg transition-colors"
                    >
                        {link.name}
                    </a>
                ))
            }
            <a
                href="tel:+56998518939"
                onclick="gtag('event', 'conversion', {'send_to': 'AW-17835958873/fB4gCK_PmtgbENnE7LhC'});"
                class="block px-3 py-3 text-base font-medium text-gray-600 hover:text-[#d97706] hover:bg-gray-50 rounded-lg transition-colors flex items-center gap-2"
            >
                <Phone className="w-5 h-5" />
                Llamar
            </a>
            <div class="pt-4">
                <a
                    href="#contacto"
                    class="block w-full text-center bg-[#1e3a8a] text-white px-6 py-3 rounded-lg font-medium shadow-md active:scale-95 transition-transform"
                >
                    Reservar Ahora
                </a>
            </div>
        </div>
    </div>
</header>

<script>
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");

    mobileMenuBtn?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
        menuIcon?.classList.toggle("hidden");
        closeIcon?.classList.toggle("hidden");
    });

    // Close menu when clicking a link
    const links = mobileMenu?.querySelectorAll("a");
    links?.forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
            menuIcon?.classList.remove("hidden");
            closeIcon?.classList.add("hidden");
        });
    });
</script>
